        android:layout_width="35dp"
        android:layout_height="33dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/ic_keyboard_arrow_right_black_24dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView20"
